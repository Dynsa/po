package Main;
import javax.rmi.CORBA.ValueHandler;

import org.eclipse.swt.*;
import org.eclipse.swt.events.*;
import org.eclipse.swt.layout.*;
import org.eclipse.swt.widgets.*;
import org.eclipse.swt.custom.StackLayout;

public class terminy {

public static void main (String [] args) {
	Display display = new Display ();

	final Shell dialog = new Shell (display);
	dialog.setLayout(new GridLayout(1, false));

	final DateTime calendar = new DateTime (dialog, SWT.CALENDAR | SWT.BORDER);
	calendar.addSelectionListener (new SelectionAdapter () {
		@Override
		public void widgetSelected (SelectionEvent e) {
			System.out.println ("Calendar date selected (MM/DD/YYYY) = " + (calendar.getMonth () + 1) + "/" + calendar.getDay () + "/" + calendar.getYear ());
		}

	});
	
	Button btnCheckButton = new Button(dialog, SWT.CHECK);
	btnCheckButton.setText("Check Button");
	
	Button btnCheckButton_1 = new Button(dialog, SWT.CHECK);
	btnCheckButton_1.setText("Check Button");
	
	Button btnCheckButton_2 = new Button(dialog, SWT.CHECK);
	btnCheckButton_2.setText("Check Button");
	
	Button btnCheckButton_3 = new Button(dialog, SWT.CHECK);
	btnCheckButton_3.setText("Check Button");
	
	Button btnCheckButton_4 = new Button(dialog, SWT.CHECK);
	btnCheckButton_4.setText("Check Button");
	/*
	Button b1 = new Button (dialog, SWT.CHECK);
	b1.setText("State 1");
	b1.setSelection(true);
	
	Button b2 = new Button (dialog, SWT.CHECK);
	b2.setText("State 2");
	b2.setSelection(false);
	
	Button b3 = new Button (dialog, SWT.CHECK);
	b3.setText("State 3");
	b3.setSelection(true);
	//b3.setEnabled(false); that's the shit!!!
	b3.setGrayed(true);
	*/
	Button ok = new Button (dialog, SWT.PUSH);
	ok.setText ("Wybierz");
	ok.addSelectionListener (new SelectionAdapter () {
		@Override
		public void widgetSelected (SelectionEvent e) {
			System.out.println ("Calendar date selected (MM/DD/YYYY) = " + (calendar.getMonth () + 1) + "/" + calendar.getDay () + "/" + calendar.getYear ());
			dialog.close ();
		}

	});
	dialog.setDefaultButton (ok);
	dialog.pack ();
	dialog.open ();
	
	
	while (!dialog.isDisposed ()) {
		if (!display.readAndDispatch ()) display.sleep ();
	}
	display.dispose ();
}
} 
